    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>

<!-- Navigation -->
<nav class="navbar navbar-default navbar-fixed-top topnav" role="navigation">
    <div class="container topnav">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand topnav" href="#">Apteki</a>
        </div>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav navbar-right">
                <li>
                    <a href="#repo">Dokumentacja i repozytoria</a>
                </li>
                <li>
                    <a href="#info">Informacje</a>
                </li>
            </ul>
        </div>
        <!-- /.navbar-collapse -->
    </div>
    <!-- /.container -->
</nav>


<!-- Header -->
<a name="repo"></a>
<div class="intro-header">
    <div class="container">

        <div class="row">
            <div class="col-lg-12">
                <div class="intro-message">
                    <h1>Apteki</h1>
                    <h3>Strona informacyjna</h3>
                    <hr class="intro-divider">
                    <ul class="list-inline intro-social-buttons">
                        <li>
                            <a href="https://github.com/antkowiakit/pharmacy" class="btn btn-default btn-lg"><i class="fa fa-github fa-fw"></i> <span class="network-name">Github - Backend</span></a>
                        </li>
                        <li>
                            <a href="https://github.com/orbitekk/Apteki" class="btn btn-default btn-lg"><i class="fa fa-github fa-fw"></i> <span class="network-name">Github - iOS</span></a>
                        </li>
                        <li>
                            <a href="/api/doc" class="btn btn-default btn-lg"><i class="fa fa-book fa-fw"></i> <span class="network-name">API Doc</span></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

    </div>
    <!-- /.container -->

</div>
<!-- /.intro-header -->

<!-- Page Content -->

<a  name="info"></a>
<div class="content-section-a">

    <div class="container">
        <div class="row">
            <div class="col-lg-5 col-sm-6">
                <hr class="section-heading-spacer">
                <div class="clearfix"></div>
                <h2 class="section-heading">Aplikacja mobilna na iOS</h2>
                <p class="lead">Aplikacja Apteki na iOS to narzędzie, które pozwala znaleźć najbliższe apteki na terenie wielkopolski!</p>
            </div>
            <div class="col-lg-5 col-lg-offset-2 col-sm-6">
                {% image 'bundles/pharmacylanding/img/phones.png' %}
                    <img class="img-responsive" src="{{ asset_url }}" alt="Example" />
                {% endimage %}
            </div>
        </div>

    </div>
    <!-- /.container -->

</div>
<!-- /.content-section-a -->

<!-- Footer -->
<footer>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <p class="copyright text-muted small">Copyright &copy; Patryk Antkowiak, Norbert Sroczyński 2015. All Rights Reserved</p>
                <p class="small">Photo <a rel="nofollow" href="http://www.flickr.com/photos/80075387@N00/414120344">++</a> <a rel="nofollow" href="https://creativecommons.org/licenses/by-sa/2.0/">(license)</a></p>
            </div>
        </div>
    </div>
</footer>



{% javascripts
    'bundles/pharmacylanding/js/jquery.js'
    'bundles/pharmacylanding/js/bootstrap.min.js'
%}
<script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
</body>

</html>
